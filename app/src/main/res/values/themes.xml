<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FollowYourShifts" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme attributes -->
        <!-- For example, you can change the primary color -->
        <item name="colorPrimary">@color/light_green</item>
        <!-- Add other theme attributes as needed -->
    </style>


    <style name="CustomDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize the background color of the date picker -->
        <item name="android:background">#00000000</item>
        <!-- Customize the text color of the date picker -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Customize the color of the selected date in the date picker -->
        <item name="android:colorAccent">#00000000</item>
        <!-- Customize the color of the date picker header -->
        <item name="android:headerBackground">#00000000</item>
        <!-- Customize the color of the date picker header selector arrows -->
        <item name="android:headerMonthTextAppearance">@style/CustomDatePickerHeaderTextAppearance</item>
    </style>

    <style name="CustomDatePickerHeaderTextAppearance" parent="android:TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <!-- Customize the color of the date picker header selector arrows -->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomTimePickerDialog" parent="@android:style/Theme.Material.Light.Dialog">
        <item name="android:windowBackground">@color/light_green2</item>
        <item name="android:colorControlActivated">@color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:colorControlNormal">@android:color/black</item>
        <item name="android:colorAccent">@android:color/black</item>
    </style>



</resources>
