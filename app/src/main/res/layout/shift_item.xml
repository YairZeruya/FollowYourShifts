<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:layout_margin="4dp"
    android:elevation="8dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/light_green">

    <RelativeLayout
        android:id="@+id/shift_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shift_IMG_clock"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:padding="3dp"
            android:layout_alignBottom="@id/shift_LBL_hours"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="20dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/money_svgrepo_com" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/shift_LBL_workplace"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/shift_IMG_clock"
            android:maxLines="2"
            android:minLines="2"
            android:text="Workplace"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold|italic" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/shift_LBL_hours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/shift_LBL_workplace"
            android:layout_alignStart="@id/shift_LBL_workplace"
            android:layout_marginTop="8dp"
            android:text="00:00-00:00"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold|italic"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>