<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_green">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/strong_green2"
        android:layout_below="@id/hours_days_text_view">

        <!-- Previous Month Button -->
        <Button
            android:id="@+id/VI_previous_month_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/back"
            android:textColor="@android:color/black"
            android:background="@null"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <!-- Month and Year TextView -->
        <TextView
            android:id="@+id/VI_monthYearTV"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Feb 2021"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

        <!-- Next Month Button -->
        <Button
            android:id="@+id/VI_next_month_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/forward"
            android:textColor="@android:color/black"
            android:background="@null"
            android:textStyle="bold"
            android:textSize="20sp"/>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/VI_topSection"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:background="@color/strong_green2">

        <!-- Name of workplace TextView -->
        <TextView
            android:id="@+id/work_place_name_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Name of workplace"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="40sp"
            android:padding="16dp" />

        <!-- Salary TextView -->
        <TextView
            android:id="@+id/salary_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/work_place_name_textView"
            android:text="0000 $"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="40sp"
            android:padding="16dp" />


        <!-- Hours and Days TextView -->
    </RelativeLayout>


    <!-- Bottom section -->
    <RelativeLayout
        android:id="@+id/VI_shift_details"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        >

        <!-- Name of workplace TextView -->
        <TextView
            android:id="@+id/hours_worked_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Hours Worked: 0"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:padding="16dp" />

        <!-- Salary TextView -->
        <TextView
            android:id="@+id/extra_hours_125_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hours_worked_text_view"
            android:text="Extra Hours (1.25x): 0"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:padding="16dp" />

        <!-- Hours and Days TextView -->
        <TextView
            android:id="@+id/extra_hours_150_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/extra_hours_125_text_view"
            android:text="Extra Hours (1.5x): 0"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:padding="16dp" />
        <TextView
            android:id="@+id/hours_days_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/extra_hours_150_text_view"
            android:text="0.0 Hours, 0 Days"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:padding="16dp" />

        <ImageView
            android:id="@+id/salary_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hours_days_text_view"
            android:src="@drawable/calculator_part_2_svgrepo_com"
            android:padding="16dp"
            android:layout_marginLeft="200dp"/>
    </RelativeLayout>

</LinearLayout>