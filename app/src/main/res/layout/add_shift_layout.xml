<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/strong_green2"
    tools:context=".Activities.AddShiftActivity">

    <DatePicker
        android:id="@+id/date_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:theme="@style/CustomDatePickerStyle" />

    <Button
        android:id="@+id/start_time_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Start Time"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/end_time_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select End Time"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />

    <Spinner
        android:id="@+id/workplace_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_margin="10dp"
        android:padding="16dp" />


    <CheckBox
        android:id="@+id/is_holiday_is_saturday_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Holiday/Saturday"
        android:textColor="@color/black" />




    <Button
        android:id="@+id/add_shift_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Shift"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
